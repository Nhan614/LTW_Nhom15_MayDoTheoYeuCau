<!-- Main Content -->
<main class="container my-5">
  <div class="welcome-section text-center">
    <p>
      Each garment is a unique creation, crafted to measure and personalized in every detail to reflect your individual style. Like a work of art, every piece embodies your distinct personality.
    </p>
    <p>
      Discover our new vision of tailoring—your personal space for distinction and elegance.
    </p>
  </div>

  <div class="container my-5">
    <!-- Category Section -->
    <section class="category-section">
      <div class="container">
        <h2 class="text-left mb-5">Categories</h2>
        <div class="row">
          <!-- Suit Category -->
          <div class="col-md-3 col-sm-6"><a href="#">
            <div class="category-box">
              <img src="resources/images/suitCategory.jpg" alt="Suit" class="img-fluid">
              <h3>Suit</h3>
            </div>
          </a>
          </div>


          <!-- Shirt Category -->
          <div class="col-md-3 col-sm-6"><a href="#">
            <div class="category-box">
              <img src="resources/images/shirtCategory.jpg" alt="Shirt" class="img-fluid">
              <h3>Shirt</h3>
            </div>
          </a>
          </div>

          <!-- Trouser Category -->
          <div class="col-md-3 col-sm-6"><a href="#">
            <div class="category-box">
              <img src="resources/images/trouserCategory.jpg" alt="Trouser" class="img-fluid">
              <h3>Trouser</h3>
            </div>
          </a>
          </div>

          <!-- Accessories Category -->
          <div class="col-md-3 col-sm-6"><a href="#">
            <div class="category-box">
              <img src="resources/images/accessoriesCategory.jpg" alt="Accessories" class="img-fluid">
